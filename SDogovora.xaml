<Page x:Class="Страховая.SDogovora"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Страховая"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SDogovora">

    <Grid>
        <Grid>
            <!--фон-->
            <Grid.Background>
                <ImageBrush ImageSource="Resources/bg.png"></ImageBrush>
            </Grid.Background>
            <Grid.Effect>
                <BlurEffect Radius="25"/>
            </Grid.Effect>
        </Grid>
        <Grid>
            <ListView Name="lvUsers" Background="#80ffffff" Foreground="#000000" SelectionChanged="lvUsers_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ФИО" Width="320" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Дата рождения" Width="100" DisplayMemberBinding="{Binding Age}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
