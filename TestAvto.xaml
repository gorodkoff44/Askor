<Page x:Class="Страховая.TestAvto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Страховая"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestAvto">

    <Grid>
        <DataGrid x:Name="DGridClient" AutoGenerateColumns="False" IsReadOnly="True" Background="#55ffffff" Margin="0,0,0,53">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Marka_avto}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding Model}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Отчество" Binding="{Binding GosNum}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding Power}" Width="150"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Button x:Name="Delete" Click="Delete_Click" Content="Удалить выделенное" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Width="150" Height="30" Background="#55000000" Foreground="White" />
    </Grid>
</Page>
